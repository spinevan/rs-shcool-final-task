<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <SwitchPreference
        android:key="@string/show_only_favorites"
        android:title="@string/show_only_favorites"
        android:defaultValue="false"
        />
    <SwitchPreference
        android:key="@string/use_night_theme"
        android:title="@string/use_night_theme"
        android:defaultValue="false"
        />
    <SeekBarPreference
        android:key="price_history_days"
        android:title="Дней истории цены"
        android:defaultValue="7"
        app:showSeekBarValue="true"
        app:min="1"
        android:max="30">
    </SeekBarPreference>
</PreferenceScreen>