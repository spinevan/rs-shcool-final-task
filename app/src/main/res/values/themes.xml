<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RSShcoolFinalTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_700</item>
        <item name="colorPrimaryVariant">@color/yellow_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="CardTitleText" parent="Theme.RSShcoolFinalTask">
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="CardDetailText" parent="Theme.RSShcoolFinalTask">
        <item name="android:textColor">@color/orange_900</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>